# Variables de entorno - PLANTILLA PARA DESARROLLO Y TESTING
# Copiar este archivo como .env.test y .env.local con valores reales

# Configuración de base de datos
DB_HOST=127.0.0.1
DB_USER=tu_usuario_db
DB_PASS=tu_password_seguro
DB_NAME=tu_base_datos_desarrollo
DB_NAME_TEST=tu_base_datos_testing_separada
DB_PORT=3306

# Puerto de la aplicación
PORT=3001

# Google Cloud Platform (usar credenciales de desarrollo/staging)
GOOGLE_APPLICATION_CREDENTIALS=./keyfiles/keyfile-dev.json
GOOGLE_BUCKET_NAME=tu-bucket-desarrollo
GOOGLE_PROJECT_ID=tu-proyecto-dev

# Configuración de entorno
NODE_ENV=development

# JWT Secret (generar uno único por entorno)
JWT_SECRET=tu-jwt-secret-super-seguro-de-al-menos-64-caracteres

# Flags de debug (opcional - solo en desarrollo)
DEBUG_ENV=false
DEBUG_DB=false

# Tamaño máximo de archivo (opcional)
MAX_FILE_SIZE=10485760
