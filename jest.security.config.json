{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/test"],
  "testMatch": [
    "**/test/**/*.test.ts",
    "**/test/**/*.spec.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/types/**",
    "!src/config/**",
    "!src/app.ts",
    "!src/server.ts"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "setupFilesAfterEnv": [
    "<rootDir>/test/setup.ts"
  ],
  "testTimeout": 30000,
  "verbose": true,
  "forceExit": true,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  },
  "modulePathIgnorePatterns": [
    "<rootDir>/dist/"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/dist/"
  ]
}
